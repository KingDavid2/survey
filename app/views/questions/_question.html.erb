<tr id="question_<%= question.id %>">
  <td><%= question.page %></td>
  <td><%= question.section %></td>
  <td><%= question.position %></td>
  <td><%= question.type %></td>
  <td><%= question.question_text %></td>
  <td>
    <ul class="horizontal-list">
      <li><%= link_to "Edit", [:edit, question.survey.client, question.survey, question] %></li>
      <%= link_to 'Duplicate', duplicate_client_survey_question_path(question.survey.client, question.survey, question), data: { confirm: 'Are you sure you want to duplicate this question?' }, class: 'btn btn-secondary' %>    
      <li><%= button_to "Delete", client_survey_question_path(question.survey.client, question.survey, question), method: :delete, data: { confirm: 'Are you sure you want to delete this question?' } %></li>
    </ul>
  </td>
</tr>
