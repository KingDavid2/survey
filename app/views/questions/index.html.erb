<h2>
  <%= t('questions.header') -%>
</h2>
<h3>
  <%= link_to t('questions.new'), new_survey_question_path(@survey) %>
</h3>
<h4>
  <%= link_to t('questions.back'), surveys_path(@survey) %>
</h4>
<hr/>

<table>
  <colgroup>
    <col>
    <col width="250">
  </colgroup>
  <thead>
    <tr>
      <th><%= t('questions.section') -%></th>
      <th><%= t('questions.position') -%></th>
      <th><%= t('questions.type') -%></th>
      <th><%= t('questions.question') -%></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "question", collection: @questions %>
  </tbody>
</table>
