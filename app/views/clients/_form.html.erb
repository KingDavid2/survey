<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group d-flex flex-column mb-3">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: 'form-control'  %>
  </div>

  <div class="form-group d-flex flex-column mb-3">
    <%= form.label :slug, style: "display: block" %>
    <%= form.text_field :slug, class: 'form-control'  %>
  </div>

  <div class="form-group d-flex flex-column mb-3">
    <%= form.label :nav_logo do %>
      <% if form.object.nav_logo.attached? %>
        The currently attached file is <%= form.object.nav_logo.filename %>. Click here to replace this file.
      <% else %>
        No file has been uploaded yet. Please pick a file.
      <% end %>
    <% end %>
    <%= form.file_field :nav_logo, class: 'form-control'  %>
  </div>
      


  <div>
    <%= form.submit :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
